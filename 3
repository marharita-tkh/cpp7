#include <iostream>
#include <fstream>
using namespace std;

int main()
{
    string s;
    ifstream f("0.txt");
    getline(f,s);
    cout<<s;
    f.close()
    return 0;
}

#2 способ

#include <iostream>
#include <fstream>
using namespace std;

int main()
{
    ifstream f("0.txt");
    int i=50;
    char* s=new char[i+1]; s[i]=0;
    f.read(s,i);
    cout<<s;
    delete [] s;
    f.close();
    return 0;
}
